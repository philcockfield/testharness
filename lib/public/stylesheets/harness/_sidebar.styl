@import './_common'


// ------------------------------------------------------
//                      List Button
// ------------------------------------------------------
.th_left 
  background darken(white, 5%)
  
  .th_list_button
    padding 15px
    border-bottom solid 1px darken(white, 20%)
    cursor: default
    noSelect()
    
    .th_label
      textEmboss()
      font-size 12pt
      color darken(white, 65%)
  
  .th_list_button.th_over
    background darken(white, 8%)

  .th_list_button.th_selected
    background: blueGradient()
    .th_label
      noEmboss()
      color white
      
  
  
