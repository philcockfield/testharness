@import 'nib'
@import 'core/common'
@import './harness/main.welcome'
@import './harness/sidebar'


// ------------------------------------------------------
//                   Constants
// ------------------------------------------------------
headerHeight = 43
footerHeight = 43
leftWidth = 320
borderColor = darken(white, 60%)


// ------------------------------------------------------
//                        Common
// ------------------------------------------------------
.th_bar
    default = #e0e1e6
    top     = #f5f5f7
    bottom  = #a6acba
    background: gradientY(default, top, bottom)



// ------------------------------------------------------
//                        Shell
// ------------------------------------------------------
body
  overflow hidden

div.th_harness.th_shell
  abs-pos()
  background: white

  div.th_region
    overflow: hidden

  div.th_header
    abs-pos(0, 0, 0, null)
    height: unit(headerHeight, px)
    border-bottom: solid 1px borderColor


  div.th_footer
    abs-pos(0, null, 0, 0)
    height: unit(footerHeight, px)
    border-top: solid 1px borderColor

  div.th_left
    abs-pos(0, 0, null, 0)
    width: unit(leftWidth, px)
    border-right: solid 1px borderColor
    background: #f5f5f5
    div.th_region
      abs-pos(0, headerHeight + 1, 0, footerHeight + 1)

  div.th_main
    abs-pos(leftWidth + 1, 0, 0, 0)
    div.th_region
      abs-pos(0, headerHeight + 1, 0, footerHeight + 1)
      overflow: hidden
    

