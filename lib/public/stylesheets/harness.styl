@import core/common

// ------------------------------------------------------
//                   Constants
// ------------------------------------------------------
headerHeight = 43
footerHeight = 43
leftWidth = 320
borderColor = darken(white, 60%)


// ------------------------------------------------------
//                        Common
// ------------------------------------------------------
.bar
    default = #e0e1e6
    top     = #f5f5f7
    bottom  = #a6acba
    background: gradientY(default, top, bottom)



// ------------------------------------------------------
//                        Shell
// ------------------------------------------------------
div.harness.shell
  absPosition()
  background: white

  div.region
    overflow: hidden

  div.header
    absPosition(0, 0, 0, null)
    height: unit(headerHeight, px)
    border-bottom: solid 1px borderColor


  div.footer
    absPosition(0, null, 0, 0)
    height: unit(footerHeight, px)
    border-top: solid 1px borderColor

  div.left
    absPosition(0, 0, null, 0)
    width: unit(leftWidth, px)
    border-right: solid 1px borderColor
    background: #f5f5f5
    div.region
      absPosition(0, headerHeight + 1, 0, footerHeight + 1)

  div.main
    absPosition(leftWidth + 1, 0, 0, 0)
    div.region
      absPosition(0, headerHeight + 1, 0, footerHeight + 1)




// ------------------------------------------------------
//                     Welcome
// ------------------------------------------------------
div.main div.welcome
    default = #007bd7
    top     = #0a93ec
    bottom  = #003683
    background: gradientY(default, top, bottom)

    div.grid
      background-image: url(../images/welcome/grid_lines.png)

    div.title
      background-image: url(../images/welcome/title.png)
      background-repeat: no-repeat
      background-position: center
